<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    >






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aakash P"
            android:fontFamily="@font/montserratblacktalic"
            android:textColor="#003c68"
            android:id="@+id/stu_name"
            android:textSize="22dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BE Computer Science"
            android:fontFamily="@font/montserratmediumitalic"
            android:textColor="#003c68"
            android:textSize="18dp"
            android:textFontWeight="4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="20dp"
            >
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Attendance"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:backgroundTint="#003c68"
                android:layout_marginRight="20dp"
                android:layout_weight="1"


                >
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Attendence"
                    android:fontFamily="@font/montserratmediumitalic"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:textFontWeight="4"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"

                    />
                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="68%"
                    android:fontFamily="@font/montserratmediumitalic"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:textFontWeight="4"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    />



            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Mark"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:backgroundTint="#003c68"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"

                >
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Mark"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserratmediumitalic"
                    android:textSize="18dp"
                    android:textFontWeight="4"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    />


            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Announcement"
            android:fontFamily="@font/montserratbold"
            android:textSize="18dp"
            android:textColor="#B7082E"
            android:layout_marginLeft="10dp"
            />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            app:strokeWidth="1dp"
            app:strokeColor="#B7082E"


            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Model Exam 2020-2021 "
                    android:textColor="#003c68"
                    android:fontFamily="@font/montserratsemibold"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="02 Aug - 9 Aug "
                    android:textColor="#B7082E"
                    android:fontFamily="@font/montserratsemibold"
                    android:textSize="14dp"
                    android:layout_margin="5dp"
                    />

            </LinearLayout>









        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Events"
            android:fontFamily="@font/montserratbold"
            android:textSize="18dp"
            android:textColor="#B7082E"
            android:layout_marginLeft="10dp"
            />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            app:strokeWidth="1dp"
            app:strokeColor="#B7082E"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sports Meet "
                    android:textColor="#003c68"
                    android:fontFamily="@font/montserratsemibold"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 Aug "
                    android:textColor="#B7082E"
                    android:fontFamily="@font/montserratsemibold"
                    android:textSize="14dp"
                    android:layout_margin="5dp"
                    />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>




    </LinearLayout>



</ScrollView>